
	<h1>Editing Book</h1>
    <%= form_for(@book) do |f| %>
    <form>
    <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
    </div>

    <div class="field">
    <label for="book_body">Body
    </label>
    <%= f.text_field :body %>
    </div>
    <div class="actions">
    <%= f.submit 'Update book' %>
    </div>
    <% end %>
    </form>
    <td>
     <%= link_to "Show", book_path(@book) %>
    </td>
	|
	<%= link_to "Back", books_path %>

